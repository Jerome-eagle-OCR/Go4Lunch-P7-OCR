<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/rv_user_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/default_avatar" />

    <TextView
        android:id="@+id/rv_user_joining"
        style="@android:style/Widget.TextView.SpinnerItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/rv_user_photo"
        app:layout_constraintStart_toEndOf="@+id/rv_user_photo"
        app:layout_constraintTop_toTopOf="@id/rv_user_photo"
        tools:text="Anonymous is joining !" />

</androidx.constraintlayout.widget.ConstraintLayout>